<Window x:Class="ToolBarSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolBarSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" Height="30">
            <Button>
                <Image Source="/Images/new_file.png" Height="16" Width="16"/>
                <Button.ToolTip>Neue Datei erstellen</Button.ToolTip>
            </Button>
            <Button>
                <Image Source="/Images/open_file.png" Height="16" Width="16"/>
            </Button>
            <Separator />
            <ComboBox Width="80" SelectedIndex="0">
                <ComboBoxItem>Arial</ComboBoxItem>
                <ComboBoxItem>Courier</ComboBoxItem>
                <ComboBoxItem>Windings</ComboBoxItem>
            </ComboBox>
        </ToolBar>
        <StackPanel></StackPanel>
    </DockPanel>
</Window>
